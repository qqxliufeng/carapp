<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_press_bg"
    android:orientation="vertical"
    android:padding="@dimen/dp_10">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="帖子:轮毂改装，如何更换汽车轮毂，如何升级..."
        android:textColor="@color/text_deep_dark_color"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:ellipsize="end"
        android:lineSpacingExtra="3dp"
        android:maxLines="2"
        android:text="回复：进口轮毂和普通国产轮毂价格相差很大，以目前 市场销售量最大的17英寸轮毂为例，进口的轮毂每..."
        android:textColor="@color/text_dark_color"
        android:textSize="@dimen/sp_14" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/dp_10"
        android:background="#f5f5f5" />

    <Button
        android:id="@+id/mBtArticleDelete"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/shape_bt_bg4"
        android:text="删除"
        android:textColor="@color/colorPrimary" />


</LinearLayout>