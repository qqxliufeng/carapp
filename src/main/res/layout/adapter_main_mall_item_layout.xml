<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/dp_10"
    android:background="@drawable/shape_main_mall_item_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_glide_load_default" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:ellipsize="end"
            android:maxLines="2"
            tools:text="佳通汽车轮胎SUV520佳通汽车轮胎SUV520佳通汽车轮胎SUV520佳通汽车轮胎SUV520佳通汽车轮胎SUV520佳通汽车轮胎SUV520佳通汽车轮胎SUV520佳通汽车轮胎SUV520佳通汽车轮胎SUV520"
            android:textColor="@color/text_deep_dark_color"
            android:textSize="@dimen/sp_12" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="￥250.00"
                android:textColor="@color/colorPrimary" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="@dimen/dp_10"
                android:layout_alignParentRight="true"
                android:src="@drawable/img_icon_shoppingcart_yellow" />
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="right"
        android:src="@drawable/img_icon_goods_unselect" />
</FrameLayout>